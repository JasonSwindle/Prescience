option_settings:
  - option_name: NEW_RELIC_LICENSE_KEY
    value: aabbccdd
  - option_name: NEW_RELIC_APP_NAME
    value: Ender
################################################################################
########################## DO NOT EDIT BELOW HERE ##############################
################################################################################
################################################################################
